<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_chats_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="Your message"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        app:layout_constraintBottom_toBottomOf="@+id/chat_user_photo"
        app:layout_constraintStart_toEndOf="@+id/chat_user_photo"
        app:layout_constraintTop_toTopOf="@+id/chat_user_photo" />

    <ImageView
        android:id="@+id/chat_user_photo"
        android:layout_width="81dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_add_svgrepo_com" />
</androidx.constraintlayout.widget.ConstraintLayout>